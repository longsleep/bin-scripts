alias tmux='tmux-next -2'
alias mv='mv -i'
alias ls='ls --color=auto'

# https://github.com/nvbn/thefuck
eval $(thefuck --alias)

# https://github.com/creationix/nvm
if [ -d "$HOME/.nvm" -a -s "$HOME/.nvm/nvm.sh" ]; then
	export NVM_DIR="$HOME/.nvm"
	source "$NVM_DIR/nvm.sh"
fi

ff() {
    find . -iname "*$@*"
}

settitle() {
  printf "\033k$1\033\\"
}

ssh() {
  settitle "ssh:$*"
  command ssh "$@"
  settitle "zsh"
}

mosh() {
  settitle "mosh:$*"
  command mosh "$@"
  settitle "zsh"
}

