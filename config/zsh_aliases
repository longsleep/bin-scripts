unsetopt correct_all
setopt correct

alias mv='mv -i'
alias ls='ls --color=auto'

# https://github.com/nvbn/thefuck
eval $(thefuck --alias)

settitle() {
  printf "\033k$1\033\\"
}

ssh() {
  settitle "ssh:$*"
  command ssh "$@"
  settitle "zsh"
}

mosh() {
  settitle "mosh:$*"
  command mosh "$@"
  settitle "zsh"
}

if [ $TILIX_ID ] || [ $VTE_VERSION ]; then
	source /etc/profile.d/vte.sh
fi
